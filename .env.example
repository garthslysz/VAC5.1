# VAC Assessment API Configuration Template
# Copy this to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
PORT=8000
LOG_LEVEL=INFO

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Authentication Settings (set to true to disable auth for local development)
AUTH_DISABLED=true
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here

# Azure OpenAI Configuration (REQUIRED)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com
AZURE_OPENAI_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Storage (for file uploads - optional for local testing)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=vac-assessment-files

# File Processing Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.json

# VAC Data Paths
RULES_PATH=app_simplified/data/rules
DOCUMENTS_PATH=app_simplified/data/documents

# Development Settings
# Set these to customize local development behavior
ENABLE_DETAILED_LOGGING=true
MOCK_AUTH_USER_ID=test-user-001
DEFAULT_CASE_ID=demo-case-001

# Optional: Database Settings (for production deployment)
# DATABASE_URL=postgresql://user:password@localhost/vacassessment
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring (for production)
# APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Local Development Overrides
# Uncomment these for specific local testing scenarios

# Skip OpenAI calls and use mock responses (for testing without Azure credits)
# MOCK_OPENAI_RESPONSES=false

# Use local file storage instead of Azure Storage
# USE_LOCAL_FILE_STORAGE=true
# LOCAL_FILE_STORAGE_PATH=./local_uploads

# Enable additional debug features
# ENABLE_API_DEBUG=true
# SAVE_CONVERSATION_LOGS=true

# Test Data Settings
# Path to test medical documents for development
# TEST_DOCUMENTS_PATH=./test_documents

# Example Configuration Values (DO NOT USE IN PRODUCTION):
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_KEY=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# AZURE_OPENAI_DEPLOYMENT=gpt-4-deployment-name
